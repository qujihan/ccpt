# https://clangd.llvm.org/config
CompileFlags:
  CompilationDatabase:  {%- if cookiecutter.build_type == "CMake" -%} build/clangd {%- elif cookiecutter.build_type == "XMake" -%} .vscode {% endif %}
  Add: -Wno-unqualified-std-cast-call

Completion:
  AllScopes: Yes
  ArgumentLists: Delimiters # https://clangd.llvm.org/config#argumentlists Since clangd-20
  HeaderInsertion: IWYU

InlayHints:
  Enabled: Yes
  BlockEnd: Yes
  Designators: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  DefaultArguments: Yes # Since clangd-20
  TypeNameLimit: 0 # Nolimit